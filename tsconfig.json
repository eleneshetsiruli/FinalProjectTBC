{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "module": "ESNext", // or "ESModule"
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["/src/*"]
    }
  },

  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
