{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "module": "ESNext", // or "ESModule"
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".", // Changed from "./src" to "."
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"] // Fixed the alias configuration
    }
  },
  "files": [], // Consider removing this or specifying entry points
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
